@page
@model WebAppCapellaKM_05.Pages.Publications.DetailsModel

<div>
    <h4>Publication</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publication.PublicationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publication.PublicationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publication.PublicationPublisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publication.PublicationPublisher)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publication.PublicationID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publication.PublicationID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publication.Articles)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Article Title</th>
                    <th>Year</th>
                    <th>Abstract</th>
                    <th>Author</th>
                    <th>PID</th>
                </tr>
                @foreach (var item in Model.Publication.Articles)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PubWorkName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PubWorkYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PubWorkAbstract)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author.AuthorFullName)
                        </td>
                        <td>
                            <a asp-page="/PubWorks/Details" asp-route-id="@item.PubWorkKeyID">
                                @Html.DisplayFor(modelItem => item.PubWorkKeyID)
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Publication.PublicationID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
