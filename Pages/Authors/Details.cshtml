@page
@model WebAppCapellaKM_05.Pages.Authors.DetailsModel

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.AuthorFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.AuthorFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.AuthorLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.AuthorLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.AuthorID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.AuthorID)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Articles)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Article Title</th>
                    <th>Year</th>
                    <th>Abstract</th>
                    <th>Keywords</th>
                    <th>PID</th>
                </tr>
                @foreach (var item in Model.Author.Articles)
                {
                 <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PubWorkName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PubWorkYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PubWorkAbstract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PubWorkKeywords)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PubWorkKeyID)
                </td>
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Author.AuthorID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
